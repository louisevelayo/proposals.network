{
	"name": "proposals.network",
	"version": "0.0.1",
	"private": true,
	"license": "MIT",
	"author": "David Dal Busco (https://daviddalbusco.com)",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/peterpeterparker/proposals.network.git"
	},
	"bugs": {
		"url": "https://github.com/peterpeterparker/proposals.network"
	},
	"type": "module",
	"scripts": {
		"build:csp": "node scripts/build.csp.mjs",
		"build:post-process": "npm run build:csp",
		"build": "tsc --noEmit && vite build && npm run build:post-process",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check './**/*.{ts,js,mjs,json,scss,css,svelte,html,md}' && eslint . --max-warnings=0",
		"format": "prettier --write './**/*.{ts,js,mjs,json,scss,css,svelte,html,md}'",
		"e2e": "playwright test",
		"e2e:ci": "playwright test --reporter=html",
		"e2e:snapshots": "playwright test --update-snapshots --reporter=list",
		"e2e:report": "playwright show-report",
		"dev": "vite dev",
		"deploy": "./junolator deploy",
		"config": "./junolator config",
		"collections": "node scripts/collections.mjs",
		"postinstall": "node -e \"require('fs').cpSync('node_modules/@junobuild/core/dist/workers/', './static/workers', {recursive: true});\""
	},
	"devDependencies": {
		"@dfinity/identity": "^0.19.3",
		"@dfinity/identity-secp256k1": "^0.19.3",
		"@junobuild/admin": "^0.0.37",
		"@playwright/test": "^1.40.0",
		"@rollup/plugin-inject": "^5.0.5",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.27.6",
		"@types/dompurify": "^3.0.5",
		"@types/node": "^20.9.3",
		"@typescript-eslint/eslint-plugin": "^6.12.0",
		"@typescript-eslint/parser": "^6.12.0",
		"autoprefixer": "^10.4.16",
		"dotenv": "^16.3.1",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.35.1",
		"node-fetch": "^3.3.2",
		"pem-file": "^1.0.1",
		"postcss": "^8.4.31",
		"prettier": "^3.1.0",
		"prettier-plugin-organize-imports": "^3.2.4",
		"prettier-plugin-svelte": "^3.1.1",
		"sass": "^1.69.5",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.3.5",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.5.0",
		"vitest": "^0.34.6"
	},
	"dependencies": {
		"@dfinity/ledger-icp": "^2.0.0-next-2023-12-02",
		"@dfinity/nns": "^3.0.0-next-2023-12-02",
		"@dfinity/utils": "^1.1.0-next-2023-12-02",
		"@junobuild/core": "^0.0.38",
		"@tiptap/core": "^2.1.12",
		"@tiptap/extension-highlight": "^2.1.12",
		"@tiptap/extension-link": "^2.1.12",
		"@tiptap/extension-typography": "^2.1.12",
		"@tiptap/extension-underline": "^2.1.12",
		"@tiptap/pm": "^2.1.12",
		"@tiptap/starter-kit": "^2.1.12",
		"dompurify": "^3.0.6",
		"idb-keyval": "^6.2.1",
		"marked": "^11.0.0",
		"nanoid": "^5.0.3"
	}
}
